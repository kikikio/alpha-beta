/* 计划的样式设置 */
.main
{
  box-sizing: border-box;
  padding: 30rpx;
  background: #f8f8f8;
}
.container{
  display: flex;
  flex-direction: column;
  border-radius: 5%;
  background: rgb(255, 255, 255);
  padding: 20px;
  margin: 10px; 
  margin-bottom: 50px;
}
.head{
  display: flex;
  flex-direction: column;
}
.headone{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.headone-left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.head-info{
  margin-left: 10px;
  display: flex;
  flex-direction: column;
}
.headtwo{
  margin-top: 10px;
  margin-bottom: 10px;
}
.content{
  width: 100%;
}
.content image
{
  width: 100%;
  border-radius: 5%;
}

/* 评论的样式设置 */
.comment{
  display: flex;
  flex-direction: row;
}
.parttwo{
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}
.comment-name{
  margin-top: 10px;
  margin-bottom: 10px;
}
.comment-other{
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  align-content: center;
}
.dianzan image{
  width: 25px;
  height: 25px;
}
/* 我的评论样式设置 */
.mycomment{
  position: fixed;
  bottom: 5px;
  margin-left: 25px;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
} 
.comment-box{
  height: 50px;
  border: 1px solid white;
  border-radius: 5%;
  background: white;
  width: 250px;
  background-color: sandybrown;
}
.tap{
  margin-left: 10px;
}
.btn {
  width: 75px;
  height: 50px;
  margin-top: 0px;
  background-color: beige;
  color: white;
}
