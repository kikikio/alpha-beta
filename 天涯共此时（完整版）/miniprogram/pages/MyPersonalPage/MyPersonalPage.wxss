/**MyPersonalPage.wxss**/

page{
  width: 100%;
  height: 100%;
}

/* 个人主页字体 */
.mpp1{
  font-family: ""微软雅黑"";
  position: absolute;
  display: flex;
  font-size: large;
  font-weight: 900;
  top: 2%;
  left: 39%;
}

.view_contain {
  width: 100%;
  height: 100%;
}

.top1{
  position: relative;
  width: 100%;
  height: 5%;
}
/* 头像所在view框 */
.userinfo {
  position: relative;
  display: flex;
  left: 4%;
  width: 90%;
  height: 45%;
  background-color: rgb(255, 255, 255);
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  flex-direction: column;
}
.view_1 {
  position: relative;
  left: 4%;
  width: 90%;
  height: 30%;
  background-color: rgb(255, 255, 255);
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}

.view_0{
  width: 100%;
  height: 35%;
  background-image: url(https://goss.veer.com/creative/vcg/veer/800water/veer-161251290.jpg);
  background-repeat: repeat;
}

.gold{
  margin:10px;
  padding: 5px;
  font-size: 13px;
  font-family: "微软雅黑";
  color: #AD974A;
}

.black{
  margin:0px;
  font-size: 15px;
  font-family: "微软雅黑";
  color: #000000;
  font-weight: 900;
}

.gray{
  padding: 5px;
  font-size: 13px;
  font-family: "微软雅黑";
  color: #91918d;
}

.content_text{
  font-size: 10px;
  font-family: "微软雅黑";
  color: #000000;

}

.view_2 {
  width: 100%;
  height: 10%;
  background: #98dd18;
}

.title{
  width: 100%;
  height: 3%;
}

.content{
  width: 100%;
  height: 25%;
}

.view_3p5{
  width: 100%;
  height: 1px;
  background: rgb(204, 204, 204);
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: rgb(0, 0, 0);
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  position: relative;
  font-size: larger;
  font-weight: 900;
}
.usedTools {
  position: relative;
  left: 10px;
  top: 10px;
  color: rgb(31, 30, 30);
  font-family: 'Courier New', Courier, monospace;
  font-weight: 600;
}
.usermotto {
  margin-top: 200px;
}
